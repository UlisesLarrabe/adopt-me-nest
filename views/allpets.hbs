<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Document</title>
  </head>
  <body>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Species</th>
          <th>Adopted</th>
        </tr>
      </thead>
      <tbody>
        {{#each pets}}
          <tr>
            <td>{{name}}</td>
            <td>{{specie}}</td>
            <td>{{adopted}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </body>

  <style>
    table {
      width: 100%;
      border-collapse: collapse;
    }

    th {
      background-color: #f2f2f2;
    }

    th,
    td {
      border: 1px solid #dddddd;
      text-align: left;
      padding: 8px;
    }

    tr:nth-child(even) {
      background-color: #f2f2f2;
    }
  </style>
</html>